def main():
	fishmake.configure()
	if   PyConfig[0] == "clean":
		return clean()
	elif PyConfig[0] == "compile":
		fishmake.compile()
	elif PyConfig[0] == "install":
		fishmake.install()
	else:
		print "Usage: fishmake <clean|compile|install>"

main()